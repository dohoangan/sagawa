<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<record id="activity_report_pdf_view" model="ir.ui.view">
        <field name="name">Activity Report</field>
        <field name="model">message.activity</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <separator string="Activity Report"/>
                <label string="Aged Partner Balance is a more detailed report of your receivables by intervals. When opening that report, Odoo asks for the name of the company, the Start Date and the size of the interval to be analyzed (in days). Odoo then calculates a table of credit balance by start Date. So if you request an interval of 30 days Odoo generates an analysis of creditors for the past month, past two months, and so on. "/>
                <group col="4">
                    <field name="date1"/>
                    <field name="date2"/>                  
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
        
        <record id="action_view_activity_report_pdf" model="ir.actions.act_window">
	        <field name="name">Acitivity Report PDF</field>
	        <field name="res_model">message.activity</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree,form</field>
	        <field name="view_id" ref="activity_report_pdf_view"/>
	        <field name="context">{}</field>
	        <field name="target">new</field>
	    </record>

    <menuitem id="menu_activity_report_pdf"
        name="Activities Report PDF"
        action="action_view_activity_report_pdf"
        parent="base.menu_sales"/>       
  </data>
</openerp>