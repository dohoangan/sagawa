<?xml version="1.0" encoding="utf-8"?>
<odoo>
<report 
			id="report_crm_activity_pdf"
			string="Activity Report"
			model="mail.message"
			report_type="qweb-pdf"
			file="sagawatransport.report_crm_activity"
			name="sagawatransport.report_crm_activity_mail"
		/>
<template id="report_crm_activity_mail">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2>Activities Report</h2>
                <div class="row mt32">
                    <div class="col-xs-6">
                        <strong>Start Date:</strong>
                        <p t-esc="data['date1']"/>
                    </div>
                    <div class="col-xs-6">
                        <strong>End Date:</strong>
                        <p t-esc="data['date2']"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Activity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="get_lines" t-as="line">
                            <td>
                                <t t-esc="line[0]"/>
                            </td>
                            <td>
                                <t t-raw="line[1]"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </t>
    </t>
</template>
</odoo>
